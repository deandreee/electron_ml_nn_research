{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "sourceMap": true,
    // "strict": true,
    "outDir": "dist",
    "baseUrl": ".",
    // "target": "es5",
    // "lib": ["dom", "es5", "es2015.promise"],
    "target": "es6",
    "lib": ["dom", "es6"],
    "jsx": "react",
    "paths": {
      "*": ["node_modules/*"]
    },
    "skipLibCheck": true
    // "allowJs": true // this copies node_modules and doesn't copy js, useless for now
  },
  "include": ["src/**/*"],
  "files": ["./src/index.tsx"]
}
